from pymata4 import pymata4
board = pymata4.Pymata4()
import time
#push button 1
PB1 = 13
#push button 2
PB2 = 12
#traffic light 4
TL4 = 10
#traffic light 5
TL5 = 11
#pedestrian light 1
PL1 = 9
#pedestrian light 2
PL2 = 8
def main_func():
    board.set_pin_mode_digital_input(PB1)
    board.set_pin_mode_digital_input(PB2)
    board.set_pin_mode_digital_output(TL5)
    board.set_pin_mode_digital_output(TL4)
    board.set_pin_mode_digital_output(PL1)
    board.set_pin_mode_digital_output(PL2)

    while True:
        Is1Pressed = board.digital_read(PB1)
        Is2Pressed = board.digital_read(PB2)
        if Is1Pressed[0]==1 or Is2Pressed[0]==1:
            time.sleep(2)
            #a print statement showing what was pressed (once)
        else:
            #stay red
            while True:
                if #TL4 has been red for exactly 20 sec:
                #turn yellow then red
                
            
            
            



